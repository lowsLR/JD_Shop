/* pages/shoppingcart/shoppingcart.wxss */

.shop-layout {
  background: #f9f9f8;
  /* height: 1200rpx; */
}

.info {
  background: #fff;
}

.line {
  border: 0.5px solid #ccc;
  opacity: 0.2;
}

.pic {
  margin-right: 20rpx;
}

.receive {
  display: flex;
  padding: 20rpx;
}

.item {
  display: flex;
  padding: 20rpx;
  align-items: center;
}

.order {
  width: 100%;
  height: 194rpx;
}

.title {
  font-size: 30rpx;
}

.desc {
  display: flex;
  font-size: 26rpx;
  color: #ccc;
}

.desc view {
  margin-right: 20rpx;
}

.priceInfo {
  display: flex;
  margin-top: 20rpx;
}

.price {
  width: 65%;
  font-size: 30rpx;
  color: #f00;
  text-align: left;
}

.minus, .add {
  border: 1px solid #ccc;
  width: 50rpx;
  text-align: center;
}

.count {
  width: 80rpx;
  border-top: 1px solid#ccc;
  border-bottom: 1px solid#ccc;
  text-align: center;
}

.totallInfo {
  display: flex;
  height: 120rpx;
}

.all {
  /* align-items: center; */
  padding-left: 20rpx;
  width: 20%;
  font-size: 24rpx;
  margin-top: 20rpx;
}

.amount {
  width: 50%;
  font-size: 26rpx;
  text-align: right;
}

.totall {
  font-size: 32rpx;
  color: #f00;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.opr {
  position: absolute;
  right: 0;
  width: 184rpx;
  font-size: 30rpx;
  font-weight: bold;
  background: #e4393c;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  color: #fff;
}
