/* pages/allorders/allorders.wxss */

.menu {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  border: 1px solid #f2f2f2;
  line-height: 90rpx;
}

.menu view {
  width: 33.3%;
  text-align: center;
}

.select {
  font-size: 30rpx;
  color: #f00;
  width: 33.3%;
  text-align: center;
  border-bottom: 5rpx solid #f00;
}

.defauil {
  width: 33.3%;
  text-align: center;
}

image {
  width: 150rpx;
  height: 150rpx;
}

.state {
  padding: 10rpx;
  font-size: 30rpx;
}

.state view {
  margin-bottom: 5rpx;
}

.state text {
  font-weight: bold;
  font-size: 26rpx;
}

.dashed {
  border: 1rpx dashed #ccc;
}

.order {
  display: flex;
  padding: 10rpx;
}

.img {
  flex: 0 0 100rpx 0;
  width: 150rpx;
  margin-right: 20rpx;
}

.title {
  font-size: 32rpx;
}

.count {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #ccc;
}

.hr {
  border: 10rpx solid #f2f2f2;
}

.line {
  border: 1rpx solid #f2f2f2;
}

.state1 {
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.btn {
  width: 120rpx;
  height: 60rpx;
  border: 1rpx solid #cccc;
  background: #ccc;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
}

.adders {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx;
  height: 120rpx;
}

.txt {
  margin-bottom: 10rpx;
}

.date, .text {
  font-size: 24rpx;
  color: #ccc;
}
