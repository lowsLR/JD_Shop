/* pages/coupon/coupon.wxss */

.imgColor, .imgColor1 {
  width: 60rpx;
  height: 20rpx;
  border: 1px solid #47c1c4;
  border-top-left-radius: 35rpx;
  border-bottom-right-radius: 35rpx;
}

.menu {
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 100%;
  border: 1px solid #f2f2f2;
  line-height: 90rpx;
}

.menu view {
  width: 33%;
  text-align: center;
}

.select {
  font-size: 30rpx;
  color: #f00;
  width: 33%;
  text-align: center;
  border-bottom: 5rpx solid #f00;
}

.defauil {
  width: 33%;
  text-align: center;
}

.item, .item1 {
  border: 1px solid #47c1c4;
  width: 96%;
  height: 200rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  margin-top: 20rpx;
  overflow: hidden;
}

.item1, .imgColor1 {
  border: 1px solid #ccc;
}

.priceInfo {
  display: flex;
  padding: 10rpx;
  height: 120rpx;
}

.price, .price1 {
  width: 20%;
  line-height: 120rpx;
  color: #47c1c4;
}

.type, .type1 {
  width: 80%;
  font-size: 30rpx;
  color: #47c1c4;
  display: flex;
  flex-direction: column;
}

.price1, .type1 {
  color: #ccc;
}

.type view, .type1 view {
  width: 100%;
  margin-top: 10rpx;
}

.rmb {
  font-size: 26rpx;
}

.count {
  font-size: 40rpx;
}

.desc, .desc1 {
  font-size: 24rpx;
  background: #47c1c4;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  color: #ffff;
}

.desc1 {
  background: #ccc;
}
